FC = mpif90 -ffixed-line-length-132
LD = mpif90
LDFLAGS = 

#use this for if ifort maped to mpif90
FC = mpif90 -132

#use this if mpif90 is not ifort
FC = ifort -132 -I/usr/lib/openmpi/include
LDFLAGS = -lifcore -lsvml -lifport

CUDAPATH = /usr/local/cuda

OLEVEL = -O4 #-g 
FFLAGS = $(OLEVEL)
CFLAGS = $(OLEVEL)
CXXFLAGS = $(OLEVEL)
GRAVLIB = SPHgrav_lib           # use this one for the direct force
GRAVLIB = SPHgravtree_lib       # use this one for the  tree  force
LIBS = -L$(GRAVLIB) -lSPHgrav -L$(CUDAPATH)/lib64 -lcudart -lcuda

FOBJS = kdtree2.o advance.o balAV3.o \
        getderivs.o getTemperature.o \
        initialize_hyperbolic.o init.o kernels.o \
        main.o output.o pressure.o\
        ran1.o spline.o splint.o\
        initialize_polyes.o initialize_polymces.o\
        initialize_corotating.o relax.o zeroin.o resplintmu.o grav.o initialize_triple.o temperaturefunction.o initialize_bps.o initialize_bpbh.o calccom.o elements.o initialize_smbh.o initialize_egrgparent.o initialize_hyperbolic_binary_single.o skipahead.o compbest3.o componentize3.o changetf.o tstep.o
#  grav.o
COBJS = rtc.o peano_sort.o
OBJS = $(FOBJS) $(COBJS)
%.o: %.f starsmasher.h
	$(FC) -c $(FFLAGS) $<
%.o :: %.f90 starsmasher.h
	$(FC) -c $(FFLAGS) $<
#%.o: %.c starsmasher.h
#	$(CC) -c $(CFLAGS) $<


EXEC = $(shell basename $(shell dirname $(shell pwd)))_sph
$(EXEC): $(OBJS)
	make -C $(GRAVLIB)
	$(LD) -o $@ $(LDFLAGS) $(OBJS) $(LIBS) 
#	mv $(EXEC) ..

clean:  
	/bin/rm -rf *o *__*.f90 *_*.mod

